/*Calendario*/

.mese {
  padding: 40px 25px;;
  width: 100%;
  background: #4f74b5;
  text-align: center;
}

.mese ul {
  margin: 0;
  padding: 0;
}

.mese ul li {
  list-style: none;
  color: white;
  font-size: 20px;
  text-transform: uppercase;
  letter-spacing: 3px;
}

.mese .prima {
  float: left;
  padding-top: 10px;
}

.mese .dopo {
  float: right;
  padding-top: 10px;
}

.settimana {
  margin: 0;
  padding: 10px 0;
  background-color: #ddd;
}

.settimana li {
  display: inline-block;
  width: 12.6%;
  color: #666;
  text-align: center;
}

.giorno {
  padding: 10px 0;
  background: #eee;
  margin: 0;
}

.giorno li {
  list-style-type: none;
  display: inline-block;
  width: 12.5%;
  text-align: center;
  margin-bottom: 5px;
  font-size:12px;
  color: #777;
}

.giorno li .attivo {
  padding: 5px;
  background: #4f74b5;
  color: white !important
}

table {
  font-family: arial, sans-serif; /* Imposta il font della tabella */
  border-collapse: collapse;      /* Imposta che i bordi della tabella devono essere unici */
  width: 100%;                    /* Imposta che grandezza della tabella deve riempire il 100% del suo contenitore  */
}

td, th {
  border: 1px solid #dddddd;  /* Imposta il colore e la grandezza del bordo delle celle */
  text-align: left;           /* Allinea a sinistra il testo delle celle */
  padding: 7px;               /* Imposta lo spazio tra il bordo e il contenuto delle celle */
}

* {
  box-sizing: border-box;    /* L'altezza e la lunghezza vengono impostati a tutti gli elementi del box */
}

.clearfix {               
  overflow: auto;
}

/* Creo due contenitori che si allineano uno di fianco all'altro (nav e article)  #bed5e4*/
nav {
  float: left;
  width: 25%;
  background: #ffffff;
  padding: 20px;
  padding-top: 65px;
}

article {
  float: left;
  padding: 20px;
  width: 75%;
  background-color: #e7f0f5;
  height: 450px; 
  
  
}

/* Serve a non far uscire i contenuti fuori dai contenitori */


